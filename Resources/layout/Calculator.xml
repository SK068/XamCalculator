<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="25px"
    android:minHeight="25px"
    android:gravity="center|top"
    app:backgroundTint="@android:color/holo_orange_light"
    android:background="@android:color/holo_blue_dark"
    android:paddingLeft="@dimen/abc_action_bar_icon_vertical_padding_material">
    <TextView
        android:text="The Calculator"
        android:layout_width="376.0dp"
        android:layout_height="68.0dp"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/MainHeading"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="italic|bold"
        android:background="@android:color/black"
        android:textColor="@android:color/holo_orange_dark"
        android:typeface="serif"
        android:textSize="@android:dimen/app_icon_size"
        android:textAlignment="center" />
    <TextView
        android:text="Number 1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Number1"
        android:textColor="@android:color/holo_green_dark"
        android:background="@android:color/background_dark"
        android:textStyle="bold|italic"
        android:textSize="@android:dimen/app_icon_size"
        android:layout_marginRight="0.0dp"
        android:layout_marginBottom="0.0dp"
        android:layout_marginTop="@android:dimen/app_icon_size"
        android:paddingLeft="@dimen/abc_action_bar_icon_vertical_padding_material"
        android:padding="@dimen/abc_action_bar_icon_vertical_padding_material" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/PlainText1" />
    <TextView
        android:text="Number2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Number2"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="@android:dimen/app_icon_size"
        android:background="@android:color/background_dark"
        android:layout_marginTop="@android:dimen/app_icon_size"
        android:textStyle="bold|italic"
        android:padding="@dimen/abc_action_bar_icon_vertical_padding_material" />
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout1"
        android:layout_marginBottom="47.5dp" />
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="423.5dp"
        android:layout_height="67.0dp"
        android:id="@+id/linearLayout2"
        android:layout_marginBottom="0.0dp"
        android:background="@android:color/holo_red_light"
        android:layout_marginLeft="0.0dp"
        android:layout_margin="@dimen/abc_action_bar_overflow_padding_start_material">
        <Button
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="41.5dp"
            android:id="@+id/btnPlus"
            android:background="@android:color/holo_green_light"
            android:paddingTop="@dimen/abc_action_bar_overflow_padding_end_material"
            android:layout_margin="@dimen/abc_action_bar_overflow_padding_end_material"
            android:textSize="@dimen/abc_action_bar_icon_vertical_padding_material" />
        <Button
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="41.5dp"
            android:id="@+id/btnMinus"
            android:background="@android:color/holo_purple"
            android:padding="@dimen/abc_action_bar_overflow_padding_start_material"
            android:layout_margin="@dimen/abc_button_padding_horizontal_material"
            android:textSize="@dimen/abc_action_bar_icon_vertical_padding_material" />
        <Button
            android:text="*"
            android:layout_width="wrap_content"
            android:layout_height="41.5dp"
            android:id="@+id/btnMul"
            android:background="@android:color/holo_red_dark"
            android:layout_margin="@dimen/abc_action_bar_overflow_padding_end_material"
            android:textSize="@dimen/abc_action_bar_icon_vertical_padding_material" />
        <Button
            android:text="/"
            android:layout_width="108.0dp"
            android:layout_height="41.5dp"
            android:id="@+id/btnDivide"
            android:background="@android:color/holo_green_light"
            android:layout_margin="@dimen/abc_action_bar_overflow_padding_end_material"
            android:textSize="@dimen/abc_action_bar_icon_vertical_padding_material" />
    </LinearLayout>

</LinearLayout>
